{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
      "name": "my-consumer-service",
      "labels": {
        "service": "my-consumer-service",
        "hystrix.enabled": "true"
      }
    },
    "spec": {
      "type": "LoadBalancer",
      "ports": [
        {
          "protocol": "TCP",
          "port": 8080,
          "targetPort": "http"
        }
      ],
      "selector": {
        "service": "my-consumer-service"
      },
      "sessionAffinity": "None"
    }
  }